<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/weatherIconImageView"
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/f44" />

        <TextView
            android:id="@+id/temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/conditionTextView"
            android:layout_alignBottom="@+id/conditionTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:text="@string/temperature"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/conditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/airPressureTextView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/airPressureTextView"
            android:layout_marginTop="79dp"
            android:text="@string/condition"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/longitudeTextView"
            android:layout_marginEnd="97dp"
            android:layout_marginRight="97dp"
            android:layout_marginTop="41dp"
            android:text="@string/location"
            android:textSize="65sp" />

        <!--<ImageView-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/yahoo_logo" />-->

        <TextView
            android:id="@+id/airPressureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignEnd="@+id/latitudeTextView"
            android:layout_alignRight="@+id/latitudeTextView"
            android:text="@string/air_pressure"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/latitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:text="@string/latitude"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/longitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/latitudeTextView"
            android:layout_alignRight="@+id/latitudeTextView"
            android:layout_below="@+id/weatherIconImageView"
            android:layout_marginTop="35dp"
            android:text="@string/longitude"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/temperatureTextView"
            android:layout_alignStart="@+id/temperatureTextView"
            android:layout_below="@+id/temperatureTextView"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="53dp"
            android:layout_toLeftOf="@+id/airPressureTextView"
            android:layout_toStartOf="@+id/airPressureTextView"
            android:text="@string/air_pressure"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/longitudeTextView"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:text="@string/latitude"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/longitudeTextView"
            android:layout_alignBottom="@+id/longitudeTextView"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_toLeftOf="@+id/airPressureTextView"
            android:layout_toStartOf="@+id/airPressureTextView"
            android:text="@string/longitude"
            android:textSize="50sp" />

    </RelativeLayout>

</layout>